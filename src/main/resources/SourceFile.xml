<?xml version="1.0"?>
<CarbonFootprint>
    <Actions>
        <Action>
            <Title>Coal power station</Title>
            <Type>Power source</Type>
            <Method>getCoalCarbonEmissionForKWh</Method>
        </Action>
        <Action>
            <Title>Wind power station</Title>
            <Type>Power source</Type>
            <Method>getWindCarbonEmissionForKWh</Method>
        </Action>
        <Action>
            <Title>Water power station</Title>
            <Type>Power source</Type>
            <Method>getWaterCarbonEmissionForKWh</Method>
        </Action>
        
        <Action>
            <Title>Coal furnace</Title>
            <Type>Heat source</Type>
            <Method>getCoalHeatForMg</Method>
        </Action>
        <Action>
            <Title>Geyser</Title>
            <Type>Heat source</Type>
            <Method>getGeyserHeatForMg</Method>
        </Action>
        
        <Action>
            <Title>RawMaterialExtraction</Title>
            <Type>Material</Type>
            
            <DefaultActions>
                <DefaultAction>Coal power station</DefaultAction>
                <DefaultAction>Coal furnace</DefaultAction>
            </DefaultActions>
            
            <Parameters>
                <Parameter>
                    <Name>MineSize</Name>
                    <Value>10000</Value>
                    <Configurable>True</Configurable>
                    <Min>5000</Min>
                    <Max>100000</Max>
                </Parameter>
            </Parameters>
            
            <Method>calculateCarbonEmissionForMgOfRawMaterial</Method>
            
            <Footprints>
                <Footprint>Power source</Footprint>
                <Footprint>Heat source</Footprint>
            </Footprints>
        </Action>
        
        
        
        <Action>
            <Title>Truck delivery</Title>
            <Type>Transport</Type>

            <DefaultActions>
                <DefaultAction>Truck creation</DefaultAction>
            </DefaultActions>

            <Parameters>
                <Parameter>
                    <Name>Distance</Name>
                    <Value>100</Value>
                    <Configurable>True</Configurable>
                    <Min>20</Min>
                    <Max>1000</Max>
                </Parameter>
                <Parameter>
                    <Name>Cost</Name>
                    <Value>50</Value>
                    <Configurable>True</Configurable>
                    <Min>10</Min>
                    <Max>100</Max>
                </Parameter>
            </Parameters>

            <Method>calculateDeliveryCost</Method>

            <Footprints>
                <Footprint>Vehicle</Footprint>
            </Footprints>
        </Action>

        <Action>
            <Title>Truck creation</Title>
            <Type>Vehicle</Type>
            <Method>getTruckCreationCost</Method>
        </Action>
        
        
        
        <Action>
            <Title>Finish</Title>
            <Type>Finish</Type>
            
            <DefaultActions>
                <DefaultAction>RawMaterialExtraction</DefaultAction>
                <DefaultAction>Truck delivery</DefaultAction>
            </DefaultActions>
            
            <Method>calculateCompleteCarbonEmission</Method>
            
            <Footprints>
                <Footprint>Material</Footprint>
                <Footprint>Transport</Footprint>
            </Footprints>
        </Action>

    </Actions>

    <Target>Finish</Target>
</CarbonFootprint>